# Example profiles.yml for Snowflake connection
# Copy this file to ~/.dbt/profiles.yml and fill in your Snowflake credentials
# NEVER commit profiles.yml with credentials to git!

dbt_mastery:
  target: dev
  outputs:
    dev:
      type: snowflake
      account: your_account_identifier  # e.g., abc12345.us-east-1

      # User/password authentication
      user: your_username
      password: your_password

      role: your_role                   # e.g., ACCOUNTADMIN, SYSADMIN
      database: your_database           # e.g., ANALYTICS
      warehouse: your_warehouse         # e.g., COMPUTE_WH
      schema: dbt_dev                   # Schema where dbt will create models
      threads: 4                        # Number of concurrent threads
      client_session_keep_alive: False

    prod:
      type: snowflake
      account: your_account_identifier
      user: your_username
      password: your_password
      role: your_role
      database: your_database
      warehouse: your_warehouse
      schema: dbt_prod
      threads: 8
      client_session_keep_alive: False

# To use this file:
# 1. Create ~/.dbt/ directory if it doesn't exist: mkdir -p ~/.dbt
# 2. Copy this file: cp profiles.yml.example ~/.dbt/profiles.yml
# 3. Edit ~/.dbt/profiles.yml with your actual Snowflake credentials
# 4. Test connection: dbt debug
